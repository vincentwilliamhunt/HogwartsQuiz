<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.70"
        android:scaleType="centerCrop"
        android:src="@drawable/deathlyhollows" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderCursive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hogwarts Quiz" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#07300a" />

            <TextView
                style="@style/QuesitonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/question_1" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/seventy_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="@string/seventy_one" />

                <RadioButton
                    android:id="@+id/one_hundred_nineteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="@string/one_hundred_nineteen" />

                <RadioButton
                    android:id="@+id/question_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one_hundred_fourty_two" />

            </RadioGroup>

            <TextView
                style="@style/QuesitonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"></LinearLayout>

            <EditText
                android:id="@+id/question_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="@string/hint_1"
                android:inputType="number" />

            <TextView
                style="@style/QuesitonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_3" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/question_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/london_underground" />

                <RadioButton
                    android:id="@+id/diagon_alley"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diagon_alley" />

                <RadioButton
                    android:id="@+id/hogwarts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hogwarts" />

            </RadioGroup>

            <TextView
                style="@style/QuesitonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <CheckBox
                    android:id="@+id/bicorn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bicorn" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gillyweed" />

                <CheckBox
                    android:id="@+id/hair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hair" />

                <CheckBox
                    android:id="@+id/leeches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/leeches" />

                <CheckBox
                    android:id="@+id/knotgrass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/knotgrass" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/squill" />

                <CheckBox
                    android:id="@+id/lacewing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lacewing" />

                <CheckBox
                    android:id="@+id/fluxweed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fluxweed" />

                <CheckBox
                    android:id="@+id/bloomslang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bloomslang" />

            </LinearLayout>

            <TextView
                style="@style/QuesitonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/peeves" />

                <CheckBox
                    android:id="@+id/baron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/baron" />

                <CheckBox
                    android:id="@+id/nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nick" />

                <CheckBox
                    android:id="@+id/the_grey_lady"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/the_grey_lady" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myrtle" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#07300a" />

            <Button
                android:id="@+id/submit_quiz"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="submitQuiz"
                android:text="@string/accio_results"
                android:textColor="#e8d03a"
                android:textSize="25dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/score_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="#ffd028"
                android:textSize="50dp"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>